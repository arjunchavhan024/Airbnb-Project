<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h2 class="col-6 offset-3">LogIn</h2>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" placeholder="Add a catchy Username..." type="text" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required >
                <p id="eyeicon" style="cursor: pointer;">show password</i></p>
            </div>
            <button class="btn btn-success">LogIn</button>
        </form>
    </div>
</div>
<script>
    let eyeicon = document.getElementById("eyeicon");
    let password = document.getElementById("password");

  eyeicon.onclick = function() {
    if(password.type == "password") {
      password.type = "text";
    }
    else{
      password.type = "password";
    }
  }
</script>